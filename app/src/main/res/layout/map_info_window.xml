<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="@dimen/_165sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.hitchtransporter.smart.customViews.SmartTextView
            android:id="@+id/venueName_txt"
            style="@style/textView_h4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_3sdp"
            android:textColor="@color/dark_blue" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:src="@drawable/location_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.hitchtransporter.smart.customViews.SmartTextView
                    android:id="@+id/venueAddress_txt"
                    style="@style/textView_h2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textColor="@color/gray_color" />

                <com.hitchtransporter.smart.customViews.SmartTextView
                    android:id="@+id/venueDistance_txt"
                    style="@style/textView_h2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgVenue"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_65sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_placeholder" />
</LinearLayout>