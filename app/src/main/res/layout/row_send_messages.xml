<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/shape_bg_outgoing_bubble"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingEnd="@dimen/_25sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp">


            <com.hitchtransporter.smart.customViews.SmartTextView
                android:id="@+id/message_tv"
                style="@style/textView_white_h3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Test Message" />

            <com.hitchtransporter.smart.customViews.SmartTextView
                android:id="@+id/message_date_time_tv"
                style="@style/textView_h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="mmm,dd yyyy 00:00 aa"
                android:textColor="@color/light_gray" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>