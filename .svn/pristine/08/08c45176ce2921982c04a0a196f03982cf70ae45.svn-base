<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_centerVertical="true"
        android:background="@color/light_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:paddingStart="@dimen/_5sdp">

        <com.hitchtransporter.smart.customViews.SmartTextView
            style="@style/textView_h2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_number"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <com.hitchtransporter.smart.customViews.SmartTextView
            android:id="@+id/order_no_payment_tv"
            style="@style/textView_h2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_3sdp"
            android:text="0"
            android:textAllCaps="true"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_10sdp">

        <com.hitchtransporter.smart.customViews.RoundedImageView
            android:id="@+id/image_paylist_iv"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_grey" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.hitchtransporter.smart.customViews.SmartTextView
                android:id="@+id/name_paylist_tv"
                style="@style/textView_h3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payee NAme"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="horizontal">

                <com.hitchtransporter.smart.customViews.SmartTextView
                    android:id="@+id/address_paylist_tv"
                    style="@style/textView_h1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:text="@string/no_address" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start">

                        <com.hitchtransporter.smart.customViews.SmartTextView
                            style="@style/textView_h1"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:text="@string/trasition_paymrnt_total" />

                        <com.hitchtransporter.smart.customViews.SmartTextView
                            android:id="@+id/total_amount_tv"
                            style="@style/textView_h1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:text="€0"
                            android:textColor="@color/primaryColorDark" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llRefundAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start">

                        <com.hitchtransporter.smart.customViews.SmartTextView
                            style="@style/textView_h1"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:text="@string/refunded_amount" />

                        <com.hitchtransporter.smart.customViews.SmartTextView
                            android:id="@+id/refund_amount"
                            style="@style/textView_h1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="end"
                            android:text="€0"
                            android:textColor="@color/primaryColorDark" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llFinalAmt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start">

                        <com.hitchtransporter.smart.customViews.SmartTextView
                            style="@style/textView_h1"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:text="@string/final_amount" />

                        <com.hitchtransporter.smart.customViews.SmartTextView
                            android:id="@+id/txtFinalAmount"
                            style="@style/textView_h1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="end"
                            android:text="€0"
                            android:textColor="@color/primaryColorDark" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/refund_amount_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start">

                        <com.hitchtransporter.smart.customViews.SmartTextView
                            style="@style/textView_h1"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:text="@string/vat" />

                        <com.hitchtransporter.smart.customViews.SmartTextView
                            android:id="@+id/vat_percent"
                            style="@style/textView_h1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:text="€0"
                            android:textColor="@color/light_red" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/app_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start">

                        <com.hitchtransporter.smart.customViews.SmartTextView
                            style="@style/textView_h1"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:text="@string/app_fee" />

                        <com.hitchtransporter.smart.customViews.SmartTextView
                            android:id="@+id/app_fee_val"
                            style="@style/textView_h1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="end"
                            android:text="€0"
                            android:textColor="@color/primaryColorDark" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/final_amount_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start">

                        <com.hitchtransporter.smart.customViews.SmartTextView
                            style="@style/textView_h1"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:text="@string/app_fee_vat" />

                        <com.hitchtransporter.smart.customViews.SmartTextView
                            android:id="@+id/app_fee_vat_val"
                            style="@style/textView_h1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="end"
                            android:text="€0"
                            android:textColor="@color/primaryColorDark" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>