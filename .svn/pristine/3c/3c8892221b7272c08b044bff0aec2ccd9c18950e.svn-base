<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hitchtransporter.transporter.Activities.Rating">

    <include layout="@layout/transporter_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_20sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:paddingStart="@dimen/_15sdp">

            <com.hitchtransporter.smart.customViews.SmartTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_line_black"
                android:gravity="center"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:text="@string/write_a_review"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <com.hitchtransporter.smart.customViews.SmartTextView
                style="@style/textView_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/to" />

            <com.hitchtransporter.smart.customViews.SmartTextView
                android:id="@+id/name_rating_tv"
                style="@style/textView_h2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/bg_round_bordered_grey"
                android:padding="@dimen/_10sdp" />

            <com.hitchtransporter.smart.customViews.SmartTextView
                style="@style/textView_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/order_no" />

            <com.hitchtransporter.smart.customViews.SmartTextView
                android:id="@+id/order_rating_tv"
                style="@style/textView_h2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/bg_round_bordered_grey"
                android:padding="@dimen/_10sdp" />

            <com.hitchtransporter.smart.customViews.SmartTextView
                style="@style/textView_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/description"
                android:textAllCaps="true" />

            <com.hitchtransporter.smart.customViews.SmartEditText
                android:id="@+id/description_rating_et"
                style="@style/textView_h2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/bg_round_bordered_grey"
                android:gravity="top"
                android:hint="@string/add_description_here"
                android:padding="@dimen/_10sdp" />

            <com.hitchtransporter.smart.customViews.SmartTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/give_your_rating_here"
                app:textAllCaps="true" />

            <RatingBar
                android:id="@+id/ratebar_rating_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:backgroundTint="@color/primaryColor"
                android:numStars="5"
                android:progressTint="@color/primaryColor"
                android:secondaryProgressTint="@color/primaryColor" />


            <com.hitchtransporter.smart.customViews.SmartButton
                android:id="@+id/submit_rating_btn"
                style="@style/textView_white_h3"
                android:layout_width="@dimen/_125sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="@string/submit" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
